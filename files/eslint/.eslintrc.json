{
	"root": true,

	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],

	"env": {
		"browser": true,
		"node": true,
		"es2022": true
	},

	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},

	"rules": {
		"no-tabs": 0,
		"comma-dangle": 0,
		"indent": ["warn", "tab", { "SwitchCase": 1 }],
		"quotes": ["warn", "double"]
	}
}
